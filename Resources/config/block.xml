<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sonata.block.service.empty.class">Sonata\BlockBundle\Block\Service\EmptyBlockService</parameter>
        <parameter key="sonata.block.service.text.class">Sonata\BlockBundle\Block\Service\TextBlockService</parameter>
        <parameter key="sonata.block.service.rss.class">Sonata\BlockBundle\Block\Service\RssBlockService</parameter>
        <parameter key="sonata.block.service.menu.class">Sonata\BlockBundle\Block\Service\MenuBlockService</parameter>
        <parameter key="sonata.block.service.facebook.like_box.class">Sonata\BlockBundle\Block\Service\Social\FacebookLikeBoxBlockService</parameter>
        <parameter key="sonata.block.service.facebook.like_button.class">Sonata\BlockBundle\Block\Service\Social\FacebookLikeButtonBlockService</parameter>
        <parameter key="sonata.block.service.facebook.send_button.class">Sonata\BlockBundle\Block\Service\Social\FacebookSendButtonBlockService</parameter>
        <parameter key="sonata.block.service.facebook.share_button.class">Sonata\BlockBundle\Block\Service\Social\FacebookShareButtonBlockService</parameter>
    </parameters>

    <services>
        <service id="sonata.block.service.empty" class="%sonata.block.service.empty.class%">
            <tag name="sonata.block" />
            <argument>sonata.block.empty</argument>
            <argument type="service" id="templating" />
        </service>

        <service id="sonata.block.service.text" class="%sonata.block.service.text.class%">
            <tag name="sonata.block" />
            <argument>sonata.block.text</argument>
            <argument type="service" id="templating" />
        </service>

        <service id="sonata.block.service.rss" class="%sonata.block.service.rss.class%">
            <tag name="sonata.block" />
            <argument>sonata.block.rss</argument>
            <argument type="service" id="templating" />
        </service>

        <service id="sonata.block.service.menu" class="%sonata.block.service.menu.class%">
            <tag name="sonata.block" />
            <argument>sonata.block.menu</argument>
            <argument type="service" id="templating" />
            <argument type="service" id="knp_menu.menu_provider" />
            <argument type="collection"></argument>
        </service>

        <!-- Facebook Social Plugins -->
        <service id="sonata.block.service.facebook.like_box" class="%sonata.block.service.facebook.like_box.class%">
            <tag name="sonata.block" />
            <argument>sonata.block.facebook.like_box</argument>
            <argument type="service" id="templating" />
        </service>
        <service id="sonata.block.service.facebook.like_button" class="%sonata.block.service.facebook.like_button.class%">
            <tag name="sonata.block" />
            <argument>sonata.block.facebook.like_button</argument>
            <argument type="service" id="templating" />
        </service>
        <service id="sonata.block.service.facebook.send_button" class="%sonata.block.service.facebook.send_button.class%">
            <tag name="sonata.block" />
            <argument>sonata.block.facebook.send_button</argument>
            <argument type="service" id="templating" />
        </service>
        <service id="sonata.block.service.facebook.share_button" class="%sonata.block.service.facebook.share_button.class%">
            <tag name="sonata.block" />
            <argument>sonata.block.facebook.share_button</argument>
            <argument type="service" id="templating" />
        </service>
        <!-- Facebook Social Plugins -->
    </services>
</container>
